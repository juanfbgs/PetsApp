@model PetsApp.Dtos.PetCreateDto

@{
    ViewData["Title"] = "Add New Pet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-info">Gallery</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">New Pet</li>
                </ol>
            </nav>

            <div class="card bg-dark text-light border-secondary shadow-lg">
                <div class="card-header border-secondary bg-black bg-opacity-25 py-3">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Register New Pet</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-info fw-bold"></label>
                            <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="e.g. Buddy" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Breed" class="form-label text-info fw-bold"></label>
                                <input asp-for="Breed" class="form-control bg-dark text-white border-secondary" placeholder="e.g. Beagle" />
                                <span asp-validation-for="Breed" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Age" class="form-label text-info fw-bold"></label>
                                <input asp-for="Age" class="form-control bg-dark text-white border-secondary" type="number" />
                                <span asp-validation-for="Age" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-info fw-bold"></label>
                            <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="3" placeholder="Describe the pet's personality..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label text-info fw-bold"></label>
                            <input asp-for="ImageFile" type="file" class="form-control bg-dark text-white border-secondary" accept="image/*" />
                            <div class="form-text text-muted">Upload a clear photo (JPG, PNG).</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info text-dark fw-bold">Save Pet Entry</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Discard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}