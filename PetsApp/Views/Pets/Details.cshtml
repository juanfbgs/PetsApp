@model PetsApp.Models.Pet

@{
    ViewData["Title"] = "Pet Details";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <img src="@Model.ImageUrl" 
             class="card-img-top" 
             alt="Photo of @Model.Name"
             style="height: 300px; object-fit: cover;">

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h2 class="card-title h4 mb-0">@Model.Name</h2>
                <span class="badge bg-primary rounded-pill">@Model.Age Years Old</span>
            </div>
            
            <p class="text-muted small mb-3">
                <i class="bi bi-tag"></i> @Model.Breed
            </p>

            <p class="card-text">
                <strong>About:</strong><br />
                @Model.Description
            </p>
        </div>

        <div class="card-footer bg-transparent border-top-0 pb-3">
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    Edit Details
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>