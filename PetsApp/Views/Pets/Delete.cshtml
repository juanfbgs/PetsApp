@model PetsApp.Models.Pet

<div class="container mt-5">
    <div class="card border-danger bg-dark text-light mx-auto" style="max-width: 500px;">
        <div class="card-body text-center p-5">
            <h1 class="display-4 text-danger"><i class="bi bi-exclamation-triangle"></i></h1>
            <h3>Are you sure?</h3>
            <p class="text-muted">You are about to delete <strong>@Model.Name</strong>. This action cannot be undone.</p>
            
            <div class="mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg w-100 mb-2">Delete Permanently</button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>